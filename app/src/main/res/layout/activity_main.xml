<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/geektech"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/geek_tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:text="GEEK TECH_KB"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/imageView"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/geek_tech1"
        android:layout_width="410dp"
        android:layout_height="270dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:text="Школа программирования GeekTech. - Углубленное и комплексное обучение профессии  Программист  - С нуля до стажировки за 7 месяцев - Гибкая система оплаты, гибкий график обучения гарантия результата - Команда учителей - профессиональных программистов из IT-компаний - Персональные менторы каждому ученику - Стоимость обучения от 4700 сом в месяц - Гарантированная стажировка выпускникам - Доступ к учебным классам 24/7 - Работа над реальными проектами - Высокий уровень трудоустройства выпускников - Обучаем мобильной разработке Android и IOS, Бэкенд-разработке, Фронтэнд-разработке, Дизайну и Интернет Маркетингу"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/geek_tech" />
</androidx.constraintlayout.widget.ConstraintLayout>